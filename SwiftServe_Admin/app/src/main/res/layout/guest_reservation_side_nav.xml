<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sidebar container -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@drawable/gradient_bg"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hello, Alice!"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/closeSideNav"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <!-- MAIN CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <!-- MENU BUTTON -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/menuButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/white"
                    app:strokeColor="@android:color/transparent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/right_rounded_border">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/menu__1_"
                            android:alpha="0.4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:gravity="center"
                            android:text="Menu"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- RESERVATION -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reservationButton"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:strokeColor="@android:color/transparent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:backgroundTint="#CBF1F5">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/reservation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:gravity="center"
                            android:text="Reservation"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F5F5F5" />

                <!-- SETTINGS TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="Settings"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#9999" />

                <!-- RESERVATION HISTORY -->

                <!-- PROFILE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reservationHistoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:backgroundTint="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:strokeColor="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_rounded_border"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:alpha="0.3"
                            android:src="@drawable/history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:alpha="0.5"
                            android:gravity="center"
                            android:text="Reservation History"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileButton"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:strokeColor="@android:color/transparent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/right_rounded_border">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/user__1_"
                            android:alpha="0.4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:gravity="center"
                            android:text="Profile"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:alpha="0.5" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- NOTIFICATION SETTINGS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/notificationSettingsButton"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:strokeColor="@android:color/transparent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/right_rounded_border">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:alpha="0.4"
                            android:src="@drawable/notification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:gravity="center"
                            android:text="Notification Settings"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:alpha="0.5" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- This expands to push logout to bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- LOGOUT BUTTON -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FF0000"
                        android:text="LOG OUT"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
