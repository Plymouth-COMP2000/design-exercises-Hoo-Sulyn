<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification_Settings">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/notification_settings_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--HEADER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/gradient_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <!-- MENU BUTTON -->
                    <ImageView
                        android:id="@+id/side_nav_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="230dp"
                        app:srcCompat="@drawable/menu" />

                    <!-- NOTIFICATION -->

                    <!-- PROFILE ICON -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        android:background="@drawable/rounded_frame"
                        android:padding="5dp"
                        android:id="@+id/profile_nav">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/user__1_" />
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:id="@+id/back_button"
                    android:text="&lt; Back"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3"
                    android:padding="16dp">

                    <!-- Header -->
                    <TableRow android:paddingBottom="8dp"/>

                    <!-- ENABLE NOTIFICATION -->
                    <TableRow>
                        <TextView
                            android:text="Enable Notifications"
                            android:padding="8dp"
                            android:textSize="18sp"/>
                        <CheckBox
                            android:checked="true"
                            android:id="@+id/enable_notifications"/>
                    </TableRow>

                    <!-- RECEIVE MENU UPDATES -->
                    <TableRow>
                        <TextView
                            android:text="Receive Reservation Edits"
                            android:padding="8dp"
                            android:textSize="18sp"/>
                        <CheckBox
                            android:checked="false"
                            android:id="@+id/reservation_edits"/>
                    </TableRow>

                    <!-- RECEIVE RESERVATION UPDATES-->
                    <TableRow>
                        <TextView
                            android:text="Receive Incoming Reservations"
                            android:padding="8dp"
                            android:textSize="18sp"/>
                        <CheckBox
                            android:checked="false"
                            android:id="@+id/incoming_reservations"/>
                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- NAVIGATION DRAWER -->
    <include
        android:id="@+id/menu_management_nav"
        layout="@layout/activity_notification_side_nav"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>