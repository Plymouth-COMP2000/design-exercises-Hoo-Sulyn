<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3FDFD"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="30dp"
    tools:context=".Guest_Confirmation_Page">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#141653"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"
        android:textSize="32sp"
        android:text="Thank you for your reservation!"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Your Reservation Number:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="# 1234"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#141653"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="We hope to see you soon!"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#94CCD2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:id="@+id/return_to_menu_button"
        android:text="Return to Menu"/>
</LinearLayout>