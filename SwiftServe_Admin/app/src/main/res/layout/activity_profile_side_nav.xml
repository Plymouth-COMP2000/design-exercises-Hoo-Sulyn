<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    BACKGROUND DIM-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.2"/>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/gradient_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingVertical="20dp"
                android:text="Hello, Admin!"
                android:textSize="16sp"
                android:id="@+id/admin_name"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeSideNav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/menu"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="0dp"
            app:strokeColor="#aaaa">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--        MENU NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/dashboardButton"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:backgroundTint="@color/white"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/dashboard"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Dashboard"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--                MENU MANAGEMENT-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menuButton"
                    android:clickable="true"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/menu__1_"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Menu Management"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--RESERVATION NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reservationButton"
                    android:clickable="true"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/reservation"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Reservation Management"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginVertical="15dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="#9999"
                    android:text="Settings"/>

                <!--RESERVATION HISTORY NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reservationHistoryButton"
                    android:clickable="true"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent"/>

                <!--PROFILE NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileButton"
                    android:clickable="true"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:backgroundTint="#CBF1F5"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/user__1_"
                            android:alpha="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Profile"
                            android:alpha="1"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--NOTIFICATION SETTINGS NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/notificationSettingsButton"
                    android:clickable="true"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Notification Settings"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0000"
                    android:id="@+id/logoutButton"
                    android:textStyle="bold"
                    android:text="LOG OUT"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>