<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#71C9CE"
        android:gravity="center"
        tools:context=".Register_Page">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--        NAVIGATION-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:textColor="#aaaa"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="0dp"
                        android:text="Login"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:backgroundTint="#94CCD2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="0dp"
                        android:text="Register"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:backgroundTint="@color/white"
                        android:textColor="#aaaa"
                        app:cornerRadius="0dp"
                        android:text="Admin."/>
                </LinearLayout>

                <!--            FORM INPUTS-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:padding="35dp"
                        android:text="Welcome, New User!"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="13sp"
                            android:hint="Fist Name"
                            android:inputType="textPersonName"
                            android:id="@+id/registerFisrtName"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="13sp"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:id="@+id/registerLastName"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="13sp"
                            android:hint="Email Address"
                            android:inputType="textEmailAddress"
                            android:id="@+id/registerEmail"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="13sp"
                            android:hint="Phone Number"
                            android:inputType="number|phone"
                            android:id="@+id/registerPhoneNum"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="13sp"
                            android:hint="New Password"
                            android:inputType="numberPassword"
                            android:id="@+id/registerNewPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:textSize="13sp"
                            android:hint="Confirm Password"
                            android:inputType="textWebPassword"
                            android:id="@+id/registerConfirmPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <!--            CHECKBOXES-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I've read and agreed to privacy policy"
                        android:textColor="#757575"
                        android:textSize="10sp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I've read and agreed to terms and conditions"
                        android:textColor="#757575"
                        android:textSize="10sp" />
                </LinearLayout>

                <!--            REGISTER BUTTON-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:backgroundTint="#71C9CE"
                    android:id="@+id/registerButton"
                    android:text="REGISTER"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
