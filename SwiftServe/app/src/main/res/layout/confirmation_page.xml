<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3FDFD"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="32sp"
        android:textColor="#141653"
        android:textAlignment="center"
        android:layout_marginBottom="70dp"
        android:text="Thank you for your reservation!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"
        android:text="You will receive a table number once your reservation has been approved!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:textColor="#141653"
        android:textAlignment="center"
        android:layout_marginBottom="70dp"
        android:text="We hope to see you soon!"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#94CCD2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingVertical="15dp"
        android:shadowRadius="10"
        android:text="Return to Menu"/>
</LinearLayout>