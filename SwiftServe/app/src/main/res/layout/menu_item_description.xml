<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_border_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <com.google.android.material.button.MaterialButton
            android:layout_width="130dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:backgroundTint="#d9d9d9"
            android:layout_marginVertical="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#f5f5f5"
            android:src="@drawable/bbq_spare_ribs"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">
<!--            ITEM TITLE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingVertical="15dp"
                android:text="Barbeque Spare Ribs"/>

<!--            ITEM PRICE-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#757575"
                android:paddingVertical="10dp"
                android:text="RM 25.00"/>

<!--            ITEM DESCRIPTION-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingVertical="10dp"
                android:text="Tender, juicy pork ribs grilled to perfection and coated in a rich, smoky barbecue glaze. Served over toasted bread with crisp pickle slices for the perfect balance of sweet, tangy, and savory flavors. Every bite melts in your mouth with a burst of smoky goodness."
                android:justificationMode="inter_word"/>

<!--            ALLERGEN INFO-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:text="Allergen Info:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:justificationMode="inter_character"
                android:text="Contains soy, gluten, garlic, and onion. May contain traces of mustard."/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>