<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    BACKGROUND DIM-->
    <LinearLayout
        android:id="@+id/sideNavOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:alpha="0.2">

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/gradient_bg"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:paddingVertical="20dp"
                android:text="Hello, Alice!"/>
            <ImageView
                android:id="@+id/closeSideNav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/menu"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:strokeColor="#aaaa">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--        MENU NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:alpha="0.4"
                            android:src="@drawable/menu__1_"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:alpha="0.5"
                            android:text="Menu"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--RESERVATION NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:backgroundTint="#CBF1F5"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/reservation" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Reservation" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:strokeColor="#9999"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F5F5F5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginVertical="15dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="#9999"
                    android:text="Settings"/>

                <!--RESERVATION HISTORY NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/history"
                            android:alpha="0.3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Reservation History"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--PROFILE NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/user__1_"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Profile"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!--NOTIFICATION SETTINGS NAV-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/right_rounded_border"
                        android:paddingVertical="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/notification"
                            android:alpha="0.4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:text="Notification Settings"
                            android:alpha="0.5"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0000"
                    android:textStyle="bold"
                    android:text="LOG OUT"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>